{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build server [debug]",
            
            "command": "dotnet",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/src/Server"
            },
            "args": [
                "build",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build server [release]",
            
            "command": "dotnet",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/src/Server"
            },
            "args": [
                "build",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "-c",
                "Release",
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build client [release]",
            
            "command": "npm",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/src/Client"
            },
            "args": [
                "run",
                "build",
            ],
            "group": "build",
        },
        {
            "label": "run client [debug]",
            
            "command": "npm",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/src/Client"
            },
            "args": [
                "start",
            ],
            "group": "build",
        },
        {
            "label": "run server [release]",
            
            "command": "./Taskly.WebApi.exe",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/src/Server/Taskly.WebApi/bin/Release/net6.0"
            },
            "group": "build",
        }

        
    ]
}